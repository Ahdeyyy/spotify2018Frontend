{{ define "content" -}}

<div class="alert alert-info shadow-lg w-3/4 m-auto my-1.5">
  <div>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
    <span>{{.Query}}</span>
  </div>
</div>

<div class="overflow-x-auto py-0.5">
  <table class="table table-compact w-full">
    <thead>
      <tr>
        <th></th> 
        <th>Name</th> 
        <th>Artist</th> 
        <th>Duration</th>
      </tr>
    </thead> 
    <tbody>
        {{range $index, $song := .Songs}}
            <tr>
                <th>{{addOne $index}}</th> 
                <td>{{$song.Name}}</td>
                <td>{{$song.Artists}}</td>
                <td>{{ msToMin $song.Duration_ms}} Mins</td>
            </tr>

        {{ else }}

            <tr>
                <td colspan="4" class="text-center text-sm md:text-md lg:text-lg ">No results foundðŸ˜”</td>
            </tr>

        {{ end }}
    </tbody> 
    <tfoot>
      <tr>
        <th></th> 
        <th>Name</th> 
        <th>Artist</th> 
        <th>Duration</th>
      </tr>
    </tfoot>
  </table>
</div>
{{ end }}